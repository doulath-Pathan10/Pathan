test('calls HardStop when response action is not SUCCESS', async () => {
  (postFulFilmentData as jest.Mock).mockResolvedValue({
    status: 200,
    data: {
      application: {
        response_type: "HARD",
        response_action: "STOP",
      },
      applicants: {},
    },
  });

  render(
    <Provider store={store}>
      <Spinner loaderType="lastStep" enable={true} />
    </Provider>
  );

  const button = screen.getByRole('button', { name: /See final approval result/ });
  fireEvent.click(button);

  await waitFor(() => {
    expect(HardStop).toHaveBeenCalled(); // Ensure HardStop is mocked
  });
});

jest.mock('../../../modules/preApproval/services/preApprovalUtilsService', () => ({
  HardStop: jest.fn(),
}));

