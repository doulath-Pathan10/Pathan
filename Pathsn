import React, { useEffect, useState } from "react";
import { KeyWithAnyModel } from "../../../utils/model/common-model";
import "./checkbox.scss";

const Checkbox = (props: KeyWithAnyModel) => {
  const [currencyCheckBox, setCurrencyCheckBox] = useState(false);
  function handleContentClick(event:any) {
    if (event.target.tagName.toUpperCase() !== "A") {
      props.setCheckedStatus(!props.checkedStatus);
    }
  }
  useEffect(()=>{
    if(props.data.logical_field_name === "currency_sgd_eq" || 
    props.data.logical_field_name === "currency_jpy_eq" ||
    props.data.logical_field_name === "currency_hkd_eq" ||
    props.data.logical_field_name === "currency_aud_eq" ||
    props.data.logical_field_name === "currency_eur_eq" ||
    props.data.logical_field_name === "currency_gbp_eq" ||
    props.data.logical_field_name === "currency_usd_eq" ||
    props.data.logical_field_name === "currency_chf" ||
    props.data.logical_field_name === "bs_currency_aud" ||
    props.data.logical_field_name === "bs_currency_eur" ||
    props.data.logical_field_name === "bs_currency_gbp" ||
    props.data.logical_field_name === "bs_currency_hkd" ||
    props.data.logical_field_name === "bs_currency_jpy" ||
    props.data.logical_field_name === "bs_currency_nzd" ||
    props.data.logical_field_name === "bs_currency_sgd" ||
    props.data.logical_field_name === "bs_currency_usd"){
      setCurrencyCheckBox(true);
    }else{
      setCurrencyCheckBox(false);
    }
  },[]);
  console.log(props.data.logical_field_name)
  return (
    <div data-testid='checkbox'>
      {currencyCheckBox ? <><div className="multi-select__item">
                        <input
                          type="checkbox"
                          //checked={item.checked}
                          //onChange={(event) => addUserInput(item, event)}
                          value={props.data.logical_field_name}
                          id={props.data.logical_field_name}
                        />
                        <label htmlFor={props.data.logical_field_name}>
                          {props.data.lov_field_name}
                        </label>
                      </div></>:<><label>{props.reviewHeader}</label>
      <div className="review__check__body" onClick={handleContentClick}>
        <div className="review__checkbox__input">
          
          <div>
            {props.reviewDescp1}
            <a target="_blank" rel="noreferrer" href={props.reviewDescp2}>
              link
            </a>
            {props.reviewDescp3}
          </div>
        </div>
        <div className="review__check__points">{props.reviewDescpoint1}</div>
        <div className="review__check__points">
          {props.reviewDescpoint2}         
        </div>

        <div>{props.reviewDescp4} </div>
      </div></>}
    </div>
  );
};

export default Checkbox;
